{
  "name": "algo-trading-v2-server",
  "version": "1.0.0",
  "description": "Portfolio-based multi-strategy trading server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --verbose --testMatch \"**/__tests__/unit/**/*.test.ts\"",
    "test:integration": "jest --verbose --testMatch \"**/__tests__/integration/**/*.test.ts\"",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "clean": "rimraf dist coverage",
    "clean:all": "rimraf dist coverage node_modules"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bybit-api": "^4.2.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "technicalindicators": "^3.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
