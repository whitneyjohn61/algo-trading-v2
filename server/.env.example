# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Secret (generate a strong random string)
JWT_SECRET=your-jwt-secret-here

# Database - Local PostgreSQL
DB_ENVIRONMENT=local
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=algo_trading_v2
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres

# Database - Neon (Production)
# DB_ENVIRONMENT=neon
# NEON_DB_HOST=
# NEON_DB_PORT=5432
# NEON_DB_NAME=
# NEON_DB_USER=
# NEON_DB_PASSWORD=
# NEON_DB_SSL=true

# Bybit API (Main Account)
BYBIT_API_KEY=your-bybit-api-key
BYBIT_API_SECRET=your-bybit-api-secret

# Bybit Testnet (Optional)
# BYBIT_TESTNET=true
# BYBIT_TESTNET_API_KEY=
# BYBIT_TESTNET_API_SECRET=

# CORS - Client URL
CLIENT_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Slack Notifications (optional — set up at https://api.slack.com/apps)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#algo-trading

# ML Signal Service (future — FreqTrade-based ML container)
# ML_SERVICE_URL=http://localhost:8080
# ML_SERVICE_ENABLED=false
